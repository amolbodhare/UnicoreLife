<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:background="@drawable/eclipsewalk"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/walk_imv"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/doctorswalk" />

        <TextView
            android:id="@+id/walk_title"
            android:layout_below="@id/walk_imv"
            android:text="FIND DOCORS"
            android:layout_marginTop="85dp"
            android:textColor="@color/walktitle"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lato_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/walk_desc"
        android:layout_below="@id/top_layout"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_regular"
        android:textSize="18sp"
        android:gravity="center"
        android:text="One way to announce or promote a certain new products or special.One way to announce or promote a certain new products or special."
        android:textColor="@color/walkdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dotsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


    </LinearLayout>


</RelativeLayout>
