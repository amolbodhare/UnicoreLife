<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bookedsuccessback"
    tools:context=".activities.BookedSuccessfullyActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_check_symbol"
        android:padding="15dp"
        android:background="@drawable/check_symbol_back" />

    <TextView
        android:text="Appointment Book Successfully"
        android:fontFamily="@font/lato_regular"
        android:textSize="21dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/doneBtn"
        android:clickable="true"
        android:text="DONE"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:textSize="16sp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/walktitle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:background="@drawable/btnbackwhite"
        android:layout_height="50dp"/>


</RelativeLayout>